{%  extends 'Pagelayout.twig' %}

{% block subtitle %}
    <h2>Bienvenue {{ utilisateur.prenom }}</h2>
{% endblock %}

{%  block body %}
{% if isConnected == true %}
<div class="card text-center">
  <div class="card-header">
    Réussir
  </div>
  <div class="card-body">
    <p class="card-text">“L'échec fait partie intégrante de notre réussite. L'échec, c'est l'envers de la réussite. ”</p>
  </div>
  <div class="card-footer text-muted">
    Ali Ahmed Saïd Esber
  </div>
</div>
{% else %}
{{ message_test }}
<div class="row justify-content-center mt-5">
    <button type="button" class="btn btn-warning btn-lg"><a href="?controller=connexion">Connexion</a></button>
</div>
{% endif %}
{% endblock %}
