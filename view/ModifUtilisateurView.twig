{%  extends 'Pagelayout.twig' %}

{% block subtitle %}
    <h2>Modifier l'utilisateur</h2>
{% endblock %}

{%  block body %}
    <div class="row justify-content-center">
        <div class="col-9">
            <form method="POST">
                <div class="form-group">
                    <label for="nom">Nom</label>
                    <input type="text" class="form-control" id="nom" value="{{utilisateur.nom}}">
                    <label for="prenom">Pr√©nom</label>
                    <input type="text" class="form-control" id="prenom" value="{{utilisateur.prenom}}">
                </div>
